<div id="top">
	<% form_tag  delete_consultants_admincons_path do %>
	<table class="recent" style="font-size:1em;">
		<h2>Consultant List</h2>
		<tr>
			<th>Delete</th>
			<th>Consultant Name</th>
			<th>Edit</th>
			
		</tr>
		<% @con_list.each do |con| %>
			<tr>
				<td class="small"> <%= check_box_tag  "con_list[]", con.id %></td>
				<td><%= con.name %></td>
				<td><%= link_to 'Edit', edit_admincon_path(con) %></td>
			</tr>
			
		<% end %>	
		<tr> 
			<td colspan="3"><%= submit_tag "Submit" %></td>
		</tr>

		<tr>
                    <td colspan="3"><%= will_paginate @con_list %></td>
                </tr>

                <tr>
                    <td colspan="6"><%= link_to 'Back to Rescue Desk', accounts_path %>  </td>
                </tr>
        <% end %>
        </table>
</div>
	
<div id="bottom">
	<%= error_messages_for :consultant %>
	
	<% form_for(:consultant, :url =>admincons_path) do |f| %>
		      <table class="recent" style="font-size:1em;">
		      <h2>Add consultant</h2>
		      <tr>
			<th><label for="name">Consultant Name</label></th>
			<td><%= f.text_field :name %></td>
		      </tr>
			<tr>
			<th >Submit</th>
			<td><%= f.submit "Create consultant" , :class=> "submit" %></td>
		      </tr>
		    </table>
	<% end %>
</div>
